<head><h2>Games List</h2></head>

<body>
<%@games.select do |game|%>
<%if game.user.id == current_user.id%>
<h3><%="Title: #{game.name}"%></h3>
<%="Console: #{game.console}"%><br>
<%="Release Date: #{game.release_date}"%><br>
<p><%="Details: #{game.details}"%><br></p>
<p><a href="/games/<%= "#{game.id}" %>/edit">edit game</a>
</p>
<form action="/games/<%= "#{game.id}" %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="delete game">
</form>
    <%end%>
<%end%>
</body>

